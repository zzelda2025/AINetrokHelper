pipeline {
    agent any
    
    environment {
        DOCKER_REGISTRY_URL = 'register.vinhthai.io.vn/vinhtechlab/ai-network-config-helper/'
        IMAGE_NAME = 'ai-network-config-helper'
        IMAGE_TAG = "${env.BUILD_NUMBER}"
        DOCKER_CREDENTIALS_ID = 'registry-gitlab-creds'
        KUBECONFIG_CREDENTIALS_ID = 'kubeconfig-k8s'
        GEMINI_API_KEY_ID = 'gemini-api-key'
        K8S_NAMESPACE = 'ai-network-config-helper'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo "Lấy mã nguồn..."
            }
        }
        
        stage('Inject API Key') {
            steps {
                withCredentials([string(credentialsId: "${GEMINI_API_KEY_ID}", variable: 'GEMINI_API_KEY')]) {
                    sh '''
                        sed -i "s|process.env.API_KEY|\\"${GEMINI_API_KEY}\\"|g" services/geminiService.ts
                    '''
                }
            }
        }
        
        stage('Build and Push Docker Image') {
            steps {
                script {
                    withCredentials([usernamePassword(
                        credentialsId: "${DOCKER_CREDENTIALS_ID}",
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DOCKER_PASS'
                    )]) {
                        sh '''
                            echo $DOCKER_PASS | docker login ${DOCKER_REGISTRY_URL} -u $DOCKER_USER --password-stdin
                            
                            docker build -t ${DOCKER_REGISTRY_URL}${IMAGE_NAME}:${IMAGE_TAG} .
                            docker tag ${DOCKER_REGISTRY_URL}${IMAGE_NAME}:${IMAGE_TAG} ${DOCKER_REGISTRY_URL}${IMAGE_NAME}:latest
                            
                            docker push ${DOCKER_REGISTRY_URL}${IMAGE_NAME}:${IMAGE_TAG}
                            docker push ${DOCKER_REGISTRY_URL}${IMAGE_NAME}:latest
                            
                            docker logout ${DOCKER_REGISTRY_URL}
                        '''
                    }
                }
            }
        }
        
        stage('Cleanup Old Resources') {
            steps {
                withCredentials([file(credentialsId: "${KUBECONFIG_CREDENTIALS_ID}", variable: 'KUBECONFIG')]) {
                    sh '''
                        export KUBECONFIG=${KUBECONFIG}
                        
                        echo "=== Kiểm tra và xóa các resources cũ (trừ namespace) ==="
                        
                        # Thứ tự xóa ngược lại: deployment -> ingress -> service (giữ lại namespace)
                        
                        # 1. Xóa Deployment
                        if [ -f "k8s/deployment.yaml" ] || [ -f "k8s/deployment.yml" ]; then
                            echo "Xóa Deployment..."
                            kubectl delete deployment ${IMAGE_NAME} -n ${K8S_NAMESPACE} --ignore-not-found=true
                        fi
                        
                        # 2. Xóa Ingress
                        if [ -f "k8s/ingress.yaml" ] || [ -f "k8s/ingress.yml" ]; then
                            echo "Xóa Ingress..."
                            kubectl delete ingress -n ${K8S_NAMESPACE} -l app=${IMAGE_NAME} --ignore-not-found=true
                        fi
                        
                        # 3. Xóa Service
                        if [ -f "k8s/service.yaml" ] || [ -f "k8s/service.yml" ]; then
                            echo "Xóa Service..."
                            kubectl delete service ${IMAGE_NAME} -n ${K8S_NAMESPACE} --ignore-not-found=true
                        fi
                        
                        # 4. Xóa Secret (nếu có github-registry-secret)
                        if [ -f "k8s/github-registry-secret.yaml" ] || [ -f "k8s/github-registry-secret.yml" ]; then
                            echo "Xóa Secret..."
                            kubectl delete secret -n ${K8S_NAMESPACE} -l app=${IMAGE_NAME} --ignore-not-found=true
                        fi
                        
                        echo "=== Hoàn thành cleanup ==="
                        sleep 3
                    '''
                }
            }
        }
        
    }
    
    post {
        success {
            echo "✅ Deploy thành công! Image: ${DOCKER_REGISTRY_URL}${IMAGE_NAME}:${IMAGE_TAG}"
            echo "✅ Namespace: ${K8S_NAMESPACE}"
        }
        failure {
            echo "❌ Deploy thất bại! Kiểm tra logs để biết chi tiết."
        }
        always {
            sh '''
                docker image prune -f || true
            '''
        }
    }
}
